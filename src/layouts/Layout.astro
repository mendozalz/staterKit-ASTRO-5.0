---
import "../styles/global.css";
import { join } from "node:path";
import { AstroFont } from "astro-font";
---

<!doctype html>
<html lang="en">
  <head>
    <AstroFont
      config={[
        {
          name: "Heebo",
          src: [
            {
              style: "regular",
              weight: "400",
              path: join(
                process.cwd(),
                "public",
                "fonts",
                "Heebo",
                "Heebo-Regular.ttf"
              ),
            },
            {
              style: "normal",
              weight: "500",
              path: join(
                process.cwd(),
                "public",
                "fonts",
                "Heebo",
                "Heebo-Medium.ttf"
              ),
            },
            {
              style: "bold",
              weight: "700",
              path: join(
                process.cwd(),
                "public",
                "fonts",
                "Heebo",
                "Heebo-Bold.ttf"
              ),
            },
            {
              style: "medium",
              weight: "300",
              path: join(
                process.cwd(),
                "public",
                "fonts",
                "Heebo",
                "Heebo-Light.ttf"
              ),
            },
            {
              style: "extrabold",
              weight: "900",
              path: join(
                process.cwd(),
                "public",
                "fonts",
                "Heebo",
                "Heebo-Black.ttf"
              ),
            },
            {
              style: "light",
              weight: "100",
              path: join(
                process.cwd(),
                "public",
                "fonts",
                "Heebo",
                "Heebo-Thin.ttf"
              ),
            },
          ],
          preload: false,
          display: "swap",
          cssVariable: "heebo",
          fallback: "sans-serif",
        },
        {
          name: "Proxima",
          src: [
            {
              style: "normal",
              weight: "400",
              path: join(
                process.cwd(),
                "public",
                "fonts",
                "Proxima",
                "Proxima-Regular.ttf"
              ),
            },
            {
              style: "mediumbold",
              weight: "500",
              path: join(
                process.cwd(),
                "public",
                "fonts",
                "Proxima",
                "Proxima-Medium.ttf"
              ),
            },
            {
              style: "bold",
              weight: "700",
              path: join(
                process.cwd(),
                "public",
                "fonts",
                "Proxima",
                "Proxima-Bold.ttf"
              ),
            },
            {
              style: "medium",
              weight: "300",
              path: join(
                process.cwd(),
                "public",
                "fonts",
                "Proxima",
                "Proxima-Light.ttf"
              ),
            },
            {
              style: "extrabold",
              weight: "900",
              path: join(
                process.cwd(),
                "public",
                "fonts",
                "Proxima",
                "Proxima-Black.ttf"
              ),
            },
            {
              style: "light",
              weight: "100",
              path: join(
                process.cwd(),
                "public",
                "fonts",
                "Proxima",
                "Proxima-Thin.ttf"
              ),
            },
          ],
          preload: false,
          display: "swap",
          cssVariable: "proxima",
          fallback: "sans-serif",
        },
      ]}
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
  </head>
  <body>
    <main class="main-container">
      <slot />
    </main>
  </body>
</html>
